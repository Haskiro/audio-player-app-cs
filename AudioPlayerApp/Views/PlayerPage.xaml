<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:AudioPlayerApp.Converters"
             x:Class="AudioPlayerApp.Views.PlayerPage"
             Title="Аудиоплеер"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <ContentPage.Resources>
        <converters:BoolToPlayPauseConverter x:Key="BoolToPlayPauseConverter" />
        
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
            <Setter Property="FontSize" Value="16"/>
        </Style>
        
        <Style TargetType="Button" x:Key="ControlButton">
            <Setter Property="BackgroundColor" Value="{DynamicResource AccentColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="4" />
        </Style>
        
        <Style TargetType="Button" x:Key="SmallControlButton">
            <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="WidthRequest" Value="40" />
            <Setter Property="HeightRequest" Value="40" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            
            <!-- Информация о текущем треке -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="{Binding CurrentTrack.Title, FallbackValue='Название трека'}" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" />
                <Label Text="{Binding CurrentTrack.Album, FallbackValue='Альбом'}" 
                       FontSize="14" 
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
            
            <VerticalStackLayout Spacing="10">
                <Grid HorizontalOptions="Fill" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> <!-- Слайдер занимает всё доступное пространство -->
                        <ColumnDefinition Width="Auto" /> <!-- Кнопка занимает столько места, сколько нужно -->
                    </Grid.ColumnDefinitions>
    
                    <Slider Grid.Column="0"
                            Minimum="0" 
                            Maximum="{Binding Duration.TotalSeconds}" 
                            Value="{Binding SliderPosition, Mode=TwoWay}"
                            DragStarted="OnSliderDragStarted"
                            DragCompleted="OnSliderDragCompleted"
                            HorizontalOptions="FillAndExpand"/>
    
                    <Button Grid.Column="1"
                            Text="{Binding PlaybackSpeed, StringFormat='{0}x'}" 
                            Command="{Binding ChangeSpeedCommand}"
                            Style="{StaticResource SmallControlButton}" />
                </Grid>
                
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="{Binding CurrentTimeFormatted, FallbackValue='00:00'}" />
                    <Label Text="/" />
                    <Label Text="{Binding TotalTimeFormatted, FallbackValue='00:00'}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            
            <!-- Основные элементы управления -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="⏮" 
                        Command="{Binding PlayPreviousCommand}"
                        Style="{StaticResource SmallControlButton}" />
                
                <Button Text="{Binding IsPlaying, Converter={StaticResource BoolToPlayPauseConverter}}"
                        Command="{Binding PlayPauseCommand}"
                        Style="{StaticResource ControlButton}" 
                        FontSize="16"/>
                
                <Button Text="⏭" 
                        Command="{Binding PlayNextCommand}"
                        Style="{StaticResource SmallControlButton}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>